<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_launcher">

    <TextView
        android:id="@+id/txt_nome_veiculo"
        android:layout_width="384dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#184DF8"
        android:fontFamily="sans-serif-black"
        android:text="FIAT ARGO"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagem_car"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="@+id/txt_nome_veiculo"
        app:layout_constraintTop_toBottomOf="@+id/txt_nome_veiculo"
        app:srcCompat="@drawable/argo" />

    <TextView
        android:id="@+id/txt_descricao1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:textColor="#0037FF"
        android:padding="8dp"
        android:text="@string/carro1_desc1"
        app:layout_constraintBottom_toBottomOf="@+id/imagem_car"
        app:layout_constraintEnd_toEndOf="@+id/txt_nome_veiculo"
        app:layout_constraintStart_toEndOf="@+id/imagem_car"
        app:layout_constraintTop_toTopOf="@+id/imagem_car" />

    <TextView
        android:id="@+id/txt_descricao2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:textColor="#0037FF"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/txt_Preco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagem_car" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/txt_Preco"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="136dp"
        android:textColor="#0037FF"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="182dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/botao_customizado"
        android:text="Voltar"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="540dp" />

    <Button
        android:id="@+id/btn_Pedir_Orcamento"
        android:layout_width="182dp"
        android:layout_height="42dp"
        android:layout_weight="1"
        android:background="@drawable/botao_customizado"
        android:text="Enviar Proposta"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="540dp" />

</androidx.constraintlayout.widget.ConstraintLayout>